<?xml version="1.0" ?>
<Configuration>
    <Properties>
        <Property name="basePath">F:\JAVAEE\src\main\resources\log/Property>
    </Properties>

    <Appenders>
        <Console name="stdout" target="SYTEM_OUT">
                <PatternLayout pattern="%d [%t] %-5level: %msg%n%throwable"></PatternLayout>
        </Console>
        <File name="log" fileName="${basePath}/logging.log" >
                <PatternLayout pattern="%d [%t] %-5level: %msg%n%throwable"></PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="log"/>
        </Root>
    </Loggers>
</Configuration>
